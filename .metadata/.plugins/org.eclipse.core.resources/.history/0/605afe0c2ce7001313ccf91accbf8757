<?php
class FietsendiefstalConvert {
	
	private $csv_data;
	private $data;
	
	public function __construct($data) {
		$this->data = $data;
		
		$this->readcsv();
	}
	
	private function readcsv() {
		$this->csv_data = @file_get_contents('./data/fietsendiefstal.csv');
		if (is_string($this->csv_data)) {
			$this->csv_data = str_getcsv($this->csv_data);
		}
		$this->data = $this->csv_data;
	}
	
	public function convert() {
		return $this->data;
	}
}
?>